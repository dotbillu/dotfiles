#nvim
nvim_cd()
{
    if [ -d "${1}" ]; then
        local dir="${1}"
        shift 1
        ( cd "${dir}" && nvim "." "${@}" )
    else
        \nvim "${@}"
    fi
}
alias nvim=nvim_cd
alias vi=nvim


#cpp
run() {
  local f="$1"
  g++ -o "$f" "${f}.cpp" && "./$f"
}


